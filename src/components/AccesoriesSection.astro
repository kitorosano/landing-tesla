---
import Section from './Section.astro'
---

<Section
  color='black'
  title='Accesorios'
  id='section-accesories'
>
  <footer
    slot='footer'
    class='flex flex-col flex-grow justify-end mb-3'
  >
    <div class='flex flex-row justify-center gap-6 mb-9'>
      <a
        class='text-white text-sm font-medium border-[3px] inline-flex justify-center items-center rounded border-transparent px-[4.5rem] py-[0.45rem] bg-[#171A20] backdrop-blur-sm'
        href='#'
        >Comprar ahora</a
      >
    </div>
    <div class='flex flex-row justify-center'>
      <ul class='flex gap-4'>
        <a
          class='text-gray-800 text-xs inline-block line-through'
          href='#'
          >Tesla © 2023</a
        >
        <a
          class='text-gray-800 text-xs inline-block'
          href='#'
          >Privacidad y legal</a
        >
        <a
          class='text-gray-800 text-xs inline-block'
          href='#'
          >Contacto</a
        >
        <a
          class='text-gray-800 text-xs inline-block'
          href='#'
          >Noticias</a
        >
        <a
          class='text-gray-800 text-xs inline-block'
          href='#'
          >Seguir informado</a
        >
        <a
          class='text-gray-800 text-xs inline-block'
          href='#'
          >Localización de tiendas</a
        >
      </ul>
    </div>
  </footer>

  <img
    slot='background'
    class='object-cover h-full w-full object-center'
    alt='Accesorios'
    src='/accesories.jpg'
  />
</Section>
